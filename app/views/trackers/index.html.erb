<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p> Know if something gets lost in the mail. </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_tracker" method="post">
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <input type="checkbox" id="delivery_status_box" name="query_delivery_status" value="1">

        <label for="delivery_status_box">Delivery status</label>
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="supposed_to_arrive_on_box">
          Supposed to arrive on
        </label>

        <input type="date" id="supposed_to_arrive_on_box" name="query_supposed_to_arrive_on">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <textarea id="details_box" name="query_details" rows="3"></textarea>
      </div>

      <button>
        Log delivery
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          User
        </th>

        <th>
          Delivery status
        </th>

        <th>
          Description
        </th>

        <th>
          Supposed to arrive on
        </th>

        <th>
          Details
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trackers.each do |a_tracker| %>
      <tr>
        <td>
          <%= a_tracker.id %>
        </td>

        <td>
          <%= a_tracker.user_id %>
        </td>

        <td>
          <%= a_tracker.delivery_status %>
        </td>

        <td>
          <%= a_tracker.description %>
        </td>

        <td>
          <%= a_tracker.supposed_to_arrive_on %>
        </td>

        <td>
          <%= a_tracker.details %>
        </td>

        <td>
          <%= time_ago_in_words(a_tracker.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tracker.updated_at) %> ago
        </td>

        <td>
          <a href="/trackers/<%= a_tracker.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
